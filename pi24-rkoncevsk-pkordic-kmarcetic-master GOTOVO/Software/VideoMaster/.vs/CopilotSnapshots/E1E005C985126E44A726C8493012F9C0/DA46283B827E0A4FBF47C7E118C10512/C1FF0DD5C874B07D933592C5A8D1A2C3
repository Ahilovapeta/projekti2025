using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.IO;
using System.Linq;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace VideoMaster
{
    public partial class formIndividualniKorisnikPocetna : Form
    {
        private PI2324_02_DBEntities DB_Entities;
        private Korisnik OdabraniKorisnik;
        private byte[] slika;
        public formIndividualniKorisnikPocetna(Korisnik korisnik)
        {
            InitializeComponent();
            DB_Entities = new PI2324_02_DBEntities();
            this.OdabraniKorisnik = korisnik;


            helpProvider1 = new HelpProvider();
            string baseDirectory = AppDomain.CurrentDomain.BaseDirectory;
            string projectDirectory = Directory.GetParent(baseDirectory).Parent.Parent.FullName;
            string documentationPath = Path.Combine(projectDirectory, "F1", "formIndividualniKorisnikPocetna.html");

            if (!File.Exists(documentationPath))
            {
                MessageBox.Show("Datoteka s dokumentacijom ne postoji: " + documentationPath);
            }
            else
            {
                helpProvider1.HelpNamespace = documentationPath;
                helpProvider1.SetHelpNavigator(this, HelpNavigator.TableOfContents);
            }
        }

        protected override bool ProcessCmdKey(ref Message msg, Keys keyData)
        {
            if (keyData == Keys.F1)
            {
                // Otvori dokumentaciju pomoću HelpProvider kontrole
                Help.ShowHelp(this, helpProvider1.HelpNamespace);
                return true;
            }
            return base.ProcessCmdKey(ref msg, keyData);
        }

        private void formIndividualniKorisnikPocetna_Load(object sender, EventArgs e)
        {
            lblKorisnickoIme.Text = OdabraniKorisnik.Nadimak;
            lblKorisnickoIme.Parent = pbBanner;
            lblKorisnickoIme.BackColor = Color.Transparent;

            if (OdabraniKorisnik.Slika_profila != null && OdabraniKorisnik.Slika_profila.Length > 0)
            {
                Image profilna = PretvorbaUSliku(OdabraniKorisnik.Slika_profila);
                pbProfilna.Image = profilna;
            }
            else
            {
                MessageBox.Show("Slika profila nije dostupna ili je prazna.");
            }
        }

        private void btnOdjava_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btnFilm_Click(object sender, EventArgs e)
        {
            this.Hide();
            formFilmovi formFilmovi = new formFilmovi(OdabraniKorisnik);
            formFilmovi.ShowDialog();
            this.Show();
        }

        private void btnPreporuke_Click(object sender, EventArgs e)
        {
            //this.Close();

        }

        private void btnNovosti_Click(object sender, EventArgs e)
        {
            this.Hide();
            formNovosti formNovosti = new formNovosti();
            formNovosti.ShowDialog();
            this.Show();
        }

        private void btnPovijest_Click(object sender, EventArgs e)
        {
            this.Hide();
            var povijestForm = new formPovijestGledanja(OdabraniKorisnik);
            povijestForm.ShowDialog();
            this.Show();
        }

        private void btnRodisteljskaZastita_Click(object sender, EventArgs e)
        {
            this.Hide();
            formRoditeljskaZastita formRoditeljskaZastita = new formRoditeljskaZastita(OdabraniKorisnik);
            formRoditeljskaZastita.ShowDialog();
            this.Show();
        }

        private void pbProfilna_Click(object sender, EventArgs e)
        {
            using (OpenFileDialog upload = new OpenFileDialog())
            {
                upload.Filter = "Slike (*.jpg, *.jpeg, *.png)|*.jpg;*.jpeg;*.png";
                if (upload.ShowDialog() == DialogResult.OK)
                {
                    string putanja = upload.FileName;
                    pbProfilna.Image = Image.FromFile(putanja);
                    slika = File.ReadAllBytes(putanja);
                }
            }
            var query = DB_Entities.Korisnik.FirstOrDefault(n => n.ID_Korisnik == OdabraniKorisnik.ID_Korisnik);
            if (query != null)
            {
                if (slika != null)
                {
                    query.Slika_profila = slika;
                }
                DB_Entities.SaveChanges();
            }
        }
        private Image PretvorbaUSliku(byte[] unos)
        {
            if (unos == null)
                return null;

            using (MemoryStream ms = new MemoryStream(unos))
            {
                Image returnImage = Image.FromStream(ms);
                return returnImage;
            }
        }
        ~formIndividualniKorisnikPocetna()
        {
            DB_Entities.Dispose();
        }
    }
}
